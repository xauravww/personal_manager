# Backend Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/personal_manager

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# Proxy Configuration (for production deployments behind reverse proxy)
TRUST_PROXY=false
PROXY_URL=

# AI Configuration
# Your AI proxy server URL (OpenAI-compatible)
AI_PROXY_URL=https://your-ai-proxy-server.com
AI_API_KEY=your-proxy-api-key
AI_MODEL=gpt-3.5-turbo

# Legacy OpenAI (if using direct OpenAI)
OPENAI_API_KEY=your-openai-api-key

# Web Search Configuration
WEB_SEARCH_URL=https://search.canine.tools/search

# MCP (Model Context Protocol) Configuration
# Enable MCP integration
MCP_ENABLED=true

# MCP Server URLs (comma-separated for multiple servers)
MCP_SERVER_URLS=https://mcp-server-1.example.com,https://mcp-server-2.example.com

# MCP Server Authentication (optional, for servers requiring auth)
MCP_SERVER_API_KEYS=key1,key2

# MCP Tool Configuration
# Comma-separated list of enabled tools across all servers
MCP_ENABLED_TOOLS=web_search,file_system,github_api,database_query

# MCP Request Timeout (in milliseconds)
MCP_REQUEST_TIMEOUT=30000

# MCP Cache Configuration
MCP_CACHE_ENABLED=true
MCP_CACHE_TTL=300000

# Instagram Webhook Configuration
# Verify token for webhook subscription (create a secure random string)
INSTAGRAM_VERIFY_TOKEN=your_secure_random_token_here

# Instagram/Meta App Secret (from Meta Developer Portal)
INSTAGRAM_APP_SECRET=your_meta_app_secret_here

# User ID to save Instagram content to (your database user ID)
INSTAGRAM_WEBHOOK_USER_ID=your_user_id_from_database

# Logging
LOG_LEVEL=info